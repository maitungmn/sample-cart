  "definitions": {
    "User": {
      "required": [
        "userID"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "userID": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "cart": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Product": {
      "required": [
        "name",
        "imageUrl",
        "price"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "price": {
          "type": "number"
        }
      }
    },
    "Products": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Product"
      }
    },
    "Category": {
      "required": [
        "title"
      ],
      "properties": {
        "id": {
          "type": "string",
          "uniqueItems": true
        },
        "title": {
          "type": "string"
        },
        "productIDs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Categories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Category"
      }
    },
    "DefaultErrors": {
      "required": [
        "error"
      ],
      "properties": {
        "error": {
          "type": "string",
          "description": "Something went wrong!"
        }
      }
    }
  }

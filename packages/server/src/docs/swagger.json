  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Process payment",
        "description": "System will store user's name, phone, address, email in this api",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "an userID",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "name": "user",
            "in": "body",
            "description": "User's information need to store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Payment information accepted",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Errors",
            "examples": {
              "application/json": {
                "error": "Something went wrong! | UserID was missing! | Invalid body!"
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Root"
        ],
        "summary": "Ping server",
        "responses": {
          "200": {
            "description": "Hello World!"
          }
        }
      }
    },
    "/seed": {
      "post": {
        "tags": [
          "Root"
        ],
        "summary": "Seed Categories and Products",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Hello World!",
            "examples": {
              "application/json": {
                "message": "Done!"
              }
            }
          },
          "400": {
            "description": "Something went wrong!",
            "examples": {
              "application/json": {
                "error": "Something went wrong!"
              }
            }
          }
        }
      }
    },

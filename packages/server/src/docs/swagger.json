        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "examples": {
              "application/json": {
                "data": {
                  "cart": [],
                  "userID": "171df952-871b-4c81-9659-a40e91dae936",
                  "version": 0,
                  "id": "60445353d8a57b3d97b64636"
                }
              }
            },
            "schema": {
              "$ref": "#/definitions/Products"
            }
          },
          "400": {
            "description": "Errors",
            "examples": {
              "application/json": {
                "error": "Something went wrong! | UserID was missing!"
              }
            }
          }
        }
      }
    },

{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --poll src/index.ts",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest --bail --passWithNoTests --coverage",
    "lint": "eslint \"**/*.ts\"",
    "precommit": "yarn test:ci && lint-staged"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/app.ts"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.ts",
      "./src/index.ts",
      "./src/app.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "lines": 80,
        "functions": 80
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.6.0",
    "mongoose": "^5.9.21",
    "mongoose-update-if-current": "^1.4.0",
    "swagger-jsdoc": "^7.0.0-rc.4",
    "swagger-ui-express": "^4.1.6",
    "ts-node-dev": "^1.0.0-pre.50",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@types/mongoose": "^5.7.29",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.1.0",
    "lint-staged": "^10.5.4",
    "mongodb-memory-server": "^6.6.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.1"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint",
      "git add ."
    ]
  }
}
